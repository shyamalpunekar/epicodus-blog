{{#partial "content"}}

   <p>Content:</p>

   <p>{{ blog.content }}</p>
   <h5>Created At:</h5>
   <p> {{ blog.createdAt }}</p>
   <h5>blog status:</h5>
   <p>
       {{#if blog.published }}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
       {{/if}}

       <a href="/blogs/{{blog.id}}/update">Edit this blog</a><br>
       <a href="/blogs/{{blog.id}}/delete">DELETE this blog (no undo)</a>
   </p>

{{/partial}}

{{> layout.hbs}}