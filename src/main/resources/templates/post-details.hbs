{{#partial "content"}}
   <p>Content:</p>
   <p>{{blog.feelings}}</p>
   <h5>Created At:</h5>
   <p> {{blog.createdAt}}</p>
   <h5>Post status:</h5>
   <p>
       {{#if blog.published}}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
       {{/if}}

       <a href="/posts/{{blog.id}}/update">Edit this post</a>
   </p>
{{/partial}}
{{> layout.hbs}}